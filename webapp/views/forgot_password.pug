doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title register User
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900', rel='stylesheet')
    link(rel='stylesheet', href='stylesheets/style.css')
  body
    .hero-wrap.js-fullheight.overlay(style="background-image: url('images/image_2.jpg'); opacity: 0.9;background-size: cover;height: 1230px;", data-stellar-background-ratio='0.5')
      .d-flex.justify-content-center.h-50
        .card(style='height: fit-content')
          .card-header
            h3(style='color: white;') Forgot Password
            small  Please Enter Your Username
          .card-body
            form(action='forgot_password_new', method='post')
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-user
                input.form-control(type='email', required='', name='email', placeholder='username')
              .form-group
                button.btn.login_btn(type='submit') Submit
            form(action='get_login_info', method='post')
              .form-group
                button.btn.login_btn(type='submit') Go Back



