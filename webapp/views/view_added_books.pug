html(lang='en')
  head
  body
    title viewbooks
    link(rel='stylesheet', href='stylesheets/style.css')
    .hero-wrap.js-fullheight.overlay(style="background-image: url('images/img2.jpg');opacity: 0.9;background-size: cover;height: 1230px; ", data-stellar-background-ratio='0.5')
      .d-flex.justify-content-center.h-50
        .card(style='width: 800px; height: fit-content')
          .card-header(style='background-color: #e9ecef;')
            h3(style='color: #111010;')  Books Added by You:
          .card-body(style='background-color: #e9ecef;')
              each book in added_books
                    .card-listing
                      .card_details(style='padding-left: 15px; background-color: white;')
                        .first-row
                          h4.box-title
                            | #{book.Title} 
                            small by #{book.Authors}
                          span.price
                            | Price
                            |  #{book.Price}
                        .second-row
                          .time
                            | Publication Date: #{book.PublicationDate}
                            | Quantity: #{book.Quantity}
                          .seats
                            | ISBN: #{book.ISBN}
                        .third-row
                          .book(style='padding-bottom: 10px;')
                            form(action='seller_update_books', method='POST')
                              input(type='hidden' name='book_id' value=book.id)
                              button.btn.login_btn(type='submit') Update
                            form(action='seller_delete_books', method='POST', name='del_form')
                              input(type='hidden' name='book_id' value=book.id id='del_id')
                              button.btn.login_btn(type='submit' onclick="return confirm('Are you sure you want to Delete?');") Delete  
                            form(action='seller_add_image', method='POST')
                              input(type='hidden' name='book_id' value=book.id id='book_id')
                              button.btn.login_btn(type='submit') Add Images
                            form(action='seller_view_images', method='POST')
                              input(type='hidden' name='book_id' value=book.id id='book_id')
                              button.btn.login_btn(type='submit') View Images
          .card-body(style='background-color: #e9ecef;')
            form(action='sell_books', method='POST')
              button.btn.login_btn(type='submit') Go Back
               
    
